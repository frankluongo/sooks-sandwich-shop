<%= form_with model: @order, url: checkout_shipping_method_path do |form| %>
  <div class="form-control">
    <%= form.label :shipping_option, "Shipping Method" %>
    <div class="form-control radio-button-group">
      <%= collection_radio_buttons(:order, :shipping_option, @shipping_options, :id, :name) %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit "Save", { "class" => "button default primary m-xsmall-top-1 elevated-item"} %>
  </div>
<% end %>
