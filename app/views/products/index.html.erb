<section class="container">
  <article class="page-heading">
    <h1>Products Page</h1>
  </article>
  <article class="site-table-wrapper p-xsmall-bottom-2 p-xsmall-top-2 p-small-bottom-4 p-small-top-4">
    <table class="elevated-item">
      <thead>
        <tr>
          <th>ID</th>
          <th>Slug</th>
          <th>Name</th>
          <th>Price</th>
          <th>Type</th>
          <th>Image</th>
          <th>Created By</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
    <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.slug %></td>
            <td><%= product.name %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= product.product_type %></td>
            <td><%= image_tag(product.image_url(:thumb)) %></td>
            <td><%= User.find(product.user_id).username %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </article>
  <article class="site-links-wrapper">
    <%= link_to 'New Product', new_product_path, { class: "button default primary"} %>
  </article>
</section>




